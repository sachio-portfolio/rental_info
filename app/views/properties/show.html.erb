<p id="notice"><%= notice %></p>

<p>
  <strong>物件名:</strong>
  <%= @property.property_name %>
</p>

<p>
  <strong>賃料:</strong>
  <%= @property.rent.to_s(:delimited) %>円
</p>

<p>
  <strong>住所:</strong>
  <%= @property.address %>
</p>

<p>
  <strong>築年数:</strong>
  <%= @property.age %>年
</p>

<p>
  <strong>備考:</strong>
  <%= @property.remarks %>
</p>

<hr>

<% if @property.stations.any? %>
  <% @stations.each.with_index(1) do |station, index| %>

    <h3><%= "最寄り駅#{index}" %></h3>
    <p>
      <strong>路線:</strong>
      <%= station.line %>
    </p>

    <p>
      <strong>駅名:</strong>
      <%= station.station_name %>
    </p>

    <p>
      <strong>徒歩分数:</strong>
      <%= station.minutes %>分
    </p>
  <% end %>
<% end %>

<%= link_to '編集', edit_property_path(@property) %> |
<%= link_to '戻る', properties_path %>
